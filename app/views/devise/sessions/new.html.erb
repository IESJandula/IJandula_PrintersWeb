<h2 class="text-3xl font-bold text-center mb-6 mt-20">BIENVENIDO A REMOTE PRINTER WEB</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'max-w-md mx-auto bg-gray-200 p-6 rounded-lg shadow-md' }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
  </div>

  <div class="flex items-center justify-between mb-4">
    <%= f.submit "LOG IN", class: 'w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>
