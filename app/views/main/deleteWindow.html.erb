<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
    
    <div class="w-full max-w-md bg-white rounded-lg shadow-md  shadow-gray-500 ">
        <h1 class="text-3xl font-bold mb-5 text-center mt-5">Borrado</h1>
        <%= form_tag("/deleteDate", method: "post", class: "p-6") do %>
            <div class="mb-6">
                <%= label_tag(:selected_status, "Estado:", class: "block text-gray-800 text-sm font-semibold mb-2") %>
                <select name="selected_status" class="form-select block w-full bg-gray-200 border border-gray-300 rounded px-3 py-2 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                    <option value="">Todos</option>
                    <option value="to_do">En progreso</option>
                    <option value="done">Finalizado</option>
                    <option value="error">Error</option>
                </select>
            </div>
            <div class="mb-6">
                <%= label_tag(:selected_date, "Fecha:", class: "block text-gray-800 text-sm font-semibold mb-2") %>
                <select name="selected_date" class="form-select block w-full bg-gray-200 border border-gray-300 rounded px-3 py-2 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                    <option value="">Todos</option>
                    <option value="0">Desde ayer</option>
                    <option value="1">Desde hace 3 d√≠as</option>
                    <option value="2">Desde la semana pasada</option>
                    <option value="3">Desde el mes pasado</option>
                </select>
            </div>
            <div class="flex justify-center">
                <%= submit_tag("Borrar", class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded") %>
                <%= link_to t('volver'), "/adminWindow",  class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-4" %>
            </div>
        <% end %>
    </div>
</div>
